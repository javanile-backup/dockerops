 * MIT Licensed
 */

var fs = require("fs");
var path = require("path");
var local = path.join(process.cwd(), "node_modules/ndev-framework/src/cli.js");
var arg = process.argv.slice(2);
var cli = null;

if (!fs.existsSync(local)) {
    cli = require("../src/cli");
} else {
    cli = require(local);
}

var log = function (data) {
    if (data) { process.stdout.write(data + "\n"); }
};

log(cli.run(arg, log));
